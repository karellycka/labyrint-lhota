# Environment Variables for Railway.app
# Copy these to Railway.app dashboard > Variables

# Application
APP_ENV=production
BASE_URL=https://your-app.railway.app

# Database (Railway will provide these from MySQL service)
DB_HOST=mysql.railway.internal
DB_PORT=3306
DB_NAME=railway
DB_USER=root
DB_PASS=password_from_railway

# Session (optional)
SESSION_TIMEOUT=31536000

# reCAPTCHA (optional)
RECAPTCHA_ENABLED=false
RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET=
